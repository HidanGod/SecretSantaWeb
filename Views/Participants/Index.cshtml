@using SecretSantaWeb.Models
@model SecretSantaWeb.Models.Group

@{
    ViewBag.Title = "Участники";
}
<p>
    @{

        var participant = new SecretSantaWeb.Models.Participant
        {
            GroupId = Model.GroupId,
            Group = Model
        };
        @Html.Partial("Create", participant)
    }
</p>
<h2>Список участников</h2>

<table class="table">
    <tr>
        <th>
            <div>Id</div>
        </th>
        <th>
           <div>Имя</div>
        </th>
        <th>
            <div>Фамилия</div>
        </th>
        <th>
            <div>Пароль</div>
        </th>
        <th></th>
    </tr>
    @if(Model != null)
    {
        foreach (var item in Model.Participants)
        {
            @Html.Partial("Participant", item)
        }
    }
</table>

<div>
    @Html.ActionLink("Назад к списку групп", "Index", "Groups")
</div>
@section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
